<!DOCTYPE html>
<html>
  <head>
    <title>ACTIVE</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="clearfix">
      <% if user_signed_in? %>
          <%= link_to user_path(current_user) do %>
            <span class="glyphicon glyphicon-user icon1" aria-hidden="true"></span>
          <% end %>

          <%= link_to new_post_path do %>
            <span class="glyphicon glyphicon-pencil icon2" aria-hidden="true"></span>
          <% end %>
        <% else %>
        <div class="icon1"></div>
        <div class="icon2"></div>
        <div class="icon3"></div>

        <% end %>

        <%= link_to posts_path do %>
        <span class="header-title">
          <ruby>ACTIVE<rt class="active-rt">アクティブ</rt></ruby>
        </span>
        <% end %>
        <% if user_signed_in? %>
        <div class="kensaku">
          <%= search_form_for @search, url:search_path do |f| %>
            <%= f.search_field :title_start, class: "serch-main"%>
          <%= f.submit "検索", class: "search-btn"%>
          <% end %>
          <% else %>

          <% end %>
        </div>

    </header>
    
    <%= yield %>
    <footer>
      <div class="end">
        <p class="footer_title">©︎2019 RareRecord inc. All Right ACTIVE.</p>
      </div>
    </footer>
  </body>
</html>
