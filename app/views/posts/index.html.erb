<div class="index-main">
	<div class="index-title">
		<span class="post-index-span">---Recently Active---</span>
	</div>
	<div class="index-main-card-container">
		<% @posts.each_with_index do |post| %>
			<%= link_to post_path(post.id) do %>
				<div class="index-main-card">
					<span class="index-main-card-span">
						<%= attachment_image_tag post.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
					</span>
					<span class="index-main-card-username"><%= post.user.username %></span>
					<div class="index-main-card-posts-image">
						<% if post.images.attached? %>
						<%= image_tag post.images.first, size: "250x250"  %> <br>
					<% end %>
					</div>
					<p class="index-main-card-posts-title">Title</p>
					<div class="index-main-card-posts-main-title">
						<%= post.title %>
					</div>
					<div class="index-main-card-posts-created_at">
						<div class="index-main-comment-ster">
							<span class="index-main-comment-ster-span1">‚≠êÔ∏è</span><ruby><rt><%= post.favorited_users.count %></rt></ruby>
							<span class="index-main-comment-ster-span1">üí¨</span><ruby><rt><%= post.comments.count %></rt></ruby>
						</div>
						<small><%= post.created_at.strftime('%Y/%m/%d') %></small>
					</div>
				</div>
			<% end %>
		<% end %>
	</div>
</div>










